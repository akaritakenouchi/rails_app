<h1>GeekTwitter</h1>
<h3>新規Tweet</h3>
<%= form_for @tweet do |f| %>
<div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :size => 10 ,class:'frm-control', placeholder: 'ADD Aniversary'%>
    <%= f.label :body %>
    <%= f.text_field :body, :size => 10 ,class:'frm-control', placeholder: 'ADD Detail'%>
    <%= f.label :endday %>
    <%= f.date_field :endday, :size => 30 %>
</div>
<%= f.submit "Tweetする" %>
<% end %>
<%= link_to "Tweet一覧に戻る", tweets_path %>