<h1>GeekTwitter</h1>
<h3>新規Tweet</h3>
<%= form_for @tweet do |f| %>
<div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :size => 140 %>
    <%= f.label :content %>
    <%= f.text_field :content, :size => 140 %>
    <%= f.label :task1 %>
    <%= f.text_field :task1, :size => 140 %>
    <%= f.label :task2 %>
    <%= f.text_field :task2, :size => 140 %>
    <%= f.label :task3 %>
    <%= f.text_field :task3, :size => 140 %>
    <%= f.label :task4 %>
    <%= f.text_field :task4, :size => 140 %>

    <div class="check_box">
        <%= f.collection_check_boxes(:button_ids, Button.all, :id, :name) do |tag| %>
            <div class='form-check'>
            <%= tag.label do %>
            <%= tag.check_box %>
            <%= tag.text %>
        <% end %>
            </div>
        <% end %>
    </div>
</div>
<%= f.submit "Tweetする" %>
<% end %>
<%= link_to "Tweet一覧に戻る", tweets_path %>